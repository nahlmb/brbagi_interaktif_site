---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brbagi Interactive</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@700&family=Work+Sans:wght@400&display=swap"
        rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Work Sans', sans-serif;
            position: relative;
            background: rgb(255,255,255);
            background: linear-gradient(52deg, rgba(255,255,255,1) 66%, rgba(255,209,44,1) 100%);
            background-repeat: no-repeat;
        }

        header {
            max-width: 1800px;
            margin: 0 auto;
            width: 100%;
            display: flex;
            justify-content: start;
            padding: 2rem;
        }

        header img {
            width: 160px;
            /* Sesuaikan ukuran logo */
            height: auto;
        }

        main {
            padding: 2rem;
            max-width: 1800px;
            margin: 0 auto;
        }

        .headline {
            font-family: 'Source Code Pro', monospace;
            font-size: 8rem;
            font-weight: bold;
            color: #000;
        }

        .tagline {
            font-size: 1.5rem;
            color: #555;
            margin-top: 50vh;
            text-align: right;
        }

        @media (max-width: 768px) {
            .headline {
                font-size: 5rem;
                /* Ukuran font untuk layar kecil */
            }
        }

        footer {
            width: 100%;
            text-align: center;
            margin-top: 100px;
            padding: 2rem;
            color: #555;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            /* Border top dengan warna hitam opacity 5% */
        }
    </style>
</head>

<body>
    <!-- Header dengan logo -->
    <header>
        <img src="/images/im_brbagi_logo.png" alt="Brbagi Logo">
    </header>

    <main>
        <!-- Headline di pojok kiri atas (di bawah header) -->
        <h1 class="headline">Light Up Around</h1>

        <!-- Tagline di pojok kanan bawah (di atas footer) -->
        <p class="tagline">
            Brbagi Interaktif is Creative Interactive Platforms.<br>
            Bringing value to lighting up around. Eager to bring creative waves!
        </p>
    </main>

    <!-- Footer di bagian bawah -->
    <footer>
        Brbagi Interaktif (c) 2025
    </footer>
</body>

</html>